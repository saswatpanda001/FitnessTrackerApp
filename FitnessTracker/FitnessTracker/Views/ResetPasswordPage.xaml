<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTracker.Views.ResetPasswordPage"
             BackgroundColor="#121212">
    <ContentPage.Content>
        <StackLayout Padding="30" Spacing="20">

            <!-- Header -->
            <StackLayout VerticalOptions="Start" HorizontalOptions="Center">
                <Image Source="reset_icon.png" HeightRequest="100" WidthRequest="100"/>
                <Label Text="Reset Your Password" FontSize="26" 
                       TextColor="White" FontAttributes="Bold"
                       HorizontalTextAlignment="Center"/>
            </StackLayout>

            <!-- Input Fields -->
            <Frame CornerRadius="10" BackgroundColor="#1E1E1E" Padding="10">
                <Entry x:Name="emailEntry"
                       Placeholder="Enter Your Email"
                       TextColor="White"
                       PlaceholderColor="#BBBBBB"
                       Keyboard="Email"/>
            </Frame>

            <Frame CornerRadius="10" BackgroundColor="#1E1E1E" Padding="10">
                <Entry x:Name="newPasswordEntry"
                       Placeholder="New Password"
                       IsPassword="True"
                       TextColor="White"
                       PlaceholderColor="#BBBBBB"/>
            </Frame>

            <Frame CornerRadius="10" BackgroundColor="#1E1E1E" Padding="10">
                <Entry x:Name="confirmPasswordEntry"
                       Placeholder="Confirm Password"
                       IsPassword="True"
                       TextColor="White"
                       PlaceholderColor="#BBBBBB"/>
            </Frame>

            <!-- Reset Password Button -->
            <Button Text="Reset Password"
                    BackgroundColor="#FF6F00"
                    TextColor="White"
                    FontSize="18"
                    CornerRadius="30"
                    HeightRequest="55"
                    FontAttributes="Bold"
                    VerticalOptions="Center"
                    Clicked="OnResetPasswordClicked"/>

            <!-- Back to Login Link -->
            <Label Text="Back to Login"
                   TextColor="#FF6F00"
                   FontSize="14"
                   HorizontalTextAlignment="Center"
                   Padding="5"
                   FontAttributes="Bold">
                <Label.GestureRecognizers>
                    <TapGestureRecognizer Tapped="OnBackToLoginTapped"/>
                </Label.GestureRecognizers>
            </Label>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>

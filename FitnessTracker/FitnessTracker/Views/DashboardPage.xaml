<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FitnessTracker.Views.DashboardPage"
             BackgroundColor="#121212">

    <ContentPage.Content>
        <ScrollView>
            <StackLayout Padding="30" Spacing="20">

                <!-- Logout Button -->
                <Button Text="🏠 Logout"
                        Clicked="OnHomeClicked"
                        BackgroundColor="Transparent"
                        TextColor="Blue"
                        HorizontalOptions="Start"
                        FontAttributes="Bold"/>

                <!-- User Stats Section -->
                <Frame BackgroundColor="#1E1E1E" CornerRadius="15" Padding="20">
                    <StackLayout Spacing="15">
                        <Label x:Name="welcomeLabel"
                               Text="Welcome, User!"
                               FontSize="24"
                               TextColor="White"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"/>

                        <StackLayout Orientation="Horizontal"
                                     HorizontalOptions="Center"
                                     Spacing="30">
                            <!-- Workout Plans Count -->
                            <StackLayout HorizontalOptions="Center">
                                <Label x:Name="workoutCountLabel"
                                       Text="💪 0"
                                       TextColor="White"
                                       FontSize="20"
                                       FontAttributes="Bold"/>
                                <Label Text="Workout Plans"
                                       TextColor="#BBBBBB"
                                       FontSize="12"
                                       HorizontalTextAlignment="Center"/>
                            </StackLayout>

                            <!-- Exercise Logs Count -->
                            <StackLayout HorizontalOptions="Center">
                                <Label x:Name="logCountLabel"
                                       Text="📒 0"
                                       TextColor="White"
                                       FontSize="20"
                                       FontAttributes="Bold"/>
                                <Label Text="Exercise Logs"
                                       TextColor="#BBBBBB"
                                       FontSize="12"
                                       HorizontalTextAlignment="Center"/>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Frame>

                <!-- Quick Links -->
                <Label Text="Quick Links"
                       FontSize="18"
                       TextColor="White"
                       FontAttributes="Bold"/>

                <Grid RowSpacing="15">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>

                    <!-- Workouts -->
                    <Frame Grid.Row="0"
                           BackgroundColor="#1E1E1E"
                           CornerRadius="15"
                           Padding="15">
                        <StackLayout Orientation="Horizontal">
                            <Button Text="Workouts"
                                    TextColor="White"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"
                                    Clicked="GoToWorkout"/>
                        </StackLayout>
                    </Frame>

                    <!-- Meal Plans -->
                    <Frame Grid.Row="1"
                           BackgroundColor="#1E1E1E"
                           CornerRadius="15"
                           Padding="15">
                        <StackLayout Orientation="Horizontal">
                            <Button Text="Meal Plans"
                                    TextColor="White"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"
                                    Clicked="GoToMealPlans"/>
                        </StackLayout>
                    </Frame>

                    <!-- Progress Tracking -->
                    <Frame Grid.Row="2"
                           BackgroundColor="#1E1E1E"
                           CornerRadius="15"
                           Padding="15">
                        <StackLayout Orientation="Horizontal">
                            <Button Text="Progress Tracking"
                                    TextColor="White"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"
                                    Clicked="GoToProgressTracking"/>
                        </StackLayout>
                    </Frame>

                    <!-- Profile -->
                    <Frame Grid.Row="3"
                           BackgroundColor="#1E1E1E"
                           CornerRadius="15"
                           Padding="15">
                        <StackLayout Orientation="Horizontal">
                            <Button Text="Profile"
                                    TextColor="White"
                                    FontSize="16"
                                    FontAttributes="Bold"
                                    VerticalOptions="Center"
                                    Clicked="GoToProfile"/>
                        </StackLayout>
                    </Frame>
                </Grid>

                <!-- Motivational Quote -->
                <Frame BackgroundColor="#FF6F00" CornerRadius="15" Padding="20">
                    <Label Text="Push Yourself, Because No One Else Will Do It For You!"
                           FontSize="16"
                           TextColor="White"
                           FontAttributes="Bold"
                           HorizontalTextAlignment="Center"/>
                </Frame>

            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>
